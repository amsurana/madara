
project (MADARA_Python) : using_madara, port/python/using_python, using_lz4, using_ssl {

  requires += python
  
  after    += MADARA

  sharedname = madara.pyd
  postbuild = python port/python/rename_lib.py
  libout = $(MADARA_ROOT)/lib
  
  Documentation_Files {
    port/python
  }

  Header_Files {
    port/python/src
    port/python/src/madara/knowledge
  }

  Source_Files {
    port/python/src
    port/python/src/madara/knowledge
  }
}

